@model List<MailletAssignment3.Models.Product>
@{
    ViewBag.Title = "All";
}

<h2>All Products</h2>

<div class="row">
    <div class="col-md-6">
        <input id="txtSearch" type="text" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-3">
        <input type="button" class="btn btn-info" value="Search" onclick="Sortable.Search();" />
    </div>
    <div class="col-md-3">
        <input type="button" class="btn btn-info" value="Add Product" onclick="window.location.href = '/Products/Upsert'" />
    </div>
</div>

<table class="sortable table table-hover">
    <thead>
        <tr>
            <th onclick="Sortable.Sort(0);">Product Code</th>
            <th onclick="Sortable.Sort(1);">Description</th>
            <th onclick="Sortable.Sort(2);">Unit Price</th>
            <th onclick="Sortable.Sort(2);">On Hand Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @**Loop through cuslist and display customers to table*@
        @foreach (var prod in Model)
        {
        <tr>
            <td>@prod.ProductCode</td>
            <td>@prod.Description</td>
            <td>@prod.UnitPrice.ToString("C")</td>
            <td>@prod.OnHandQuantity</td>
            <td><a href="/Products/Upsert/@prod.ProductCode">Edit</a></td>
        </tr>
        }
    </tbody>
</table>
<script>Sortable.baseUrl = '/Products/All/';</script>