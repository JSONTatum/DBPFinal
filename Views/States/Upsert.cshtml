@model MailletAssignment3.Models.State
@{
    ViewBag.Title = "Upsert";
}

<h2>Upsert A State</h2>

@using (Html.BeginForm("Upsert", "States", FormMethod.Post))
{
    @Html.TextBoxFor(c => c.StateCode, new { @class = "form-control", placeholder = "State Code" })
    @Html.TextBoxFor(c => c.StateName, new { @class = "form-control", placeholder = "State Name" })
    <input type="submit" , value="Submit" , class="btn btn-info" />
}